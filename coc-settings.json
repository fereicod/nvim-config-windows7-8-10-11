{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "html",
    "markdown",
    "python",
    "javascript",
    "typescript",
    "jsonc",
    "vim",
    "md",
    "txt",
    "json",
    "sql"
  ],
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings.global": {
    "<cr>": [
      "expandable?",
      "expand",
      "open"
    ],
    "v": "open:vsplit"
  },
  {
    "languageserver": {
      "go": {
        "command": "gopls",
        "rootPatterns": [
          "go.mod"
        ],
        "trace.server": "verbose",
        "filetypes": [
          "go"
        ]
      }
    }
  }
}
